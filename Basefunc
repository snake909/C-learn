    int a, b, res;
    scanf("%d %d", &a, &b);
    res = a - b;
    res = res > 0 ? res : res * -1;     \\нативная абс функция без подключения модуля <math.h>
    --------------------------------------------------------------------------------------------------------
    
    a%b = (a%b + b)%b                   \\Универсальная формула вычисления положительного остатка в С/С++ для любых целых чисел
    --------------------------------------------------------------------------------------------------------
    
